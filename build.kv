<blanks1>:
    size_hint: None, None
    x: dp(16)
    y: dp(1)
    size: dp(1), dp(1)
<MDRB@MDRaisedButton>:
    md_bg_color:  0,0, 0, 1
    theme_text_color: "Custom"
    text_color: 1,1,0,1
    size_hint: 0.3,.05
    line_color: 1, 1, 1, 1
    font_style:"Subtitle2"
    font_name: 'assets/Bodoni Bold'
    font_size: "18sp"
<MDTXT@MDTextField>:
    size_hint: 0.4,.1
    pos_hint: {'center_x':0.5 , 'center_y':0.6}
    required: True
    font_size: "14sp"
    text_color: 0,0,0,1
    bold:True
    halign: "center"

<Connect>:
    canvas.before:
        Color:
            rgba:(.96,.87,.30,.8)
        Rectangle:
            size:self.size
            pos: self.pos
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: 'Access Screen'
            type: "top"
            right_action_items: [["close", lambda x: root.onback()]]
            elevation:10
            bold: True
        MDScreen:
            MDLabel:
                text: "Please Fill the form bellow to procced"
                pos_hint: {'center_x':0.5 , 'center_y':0.9}
                halign:"center"
                bold: True
            MDLabel:
                halign: "center"
                theme_text_color: "Custom"
                text_color:0.80,0.35,0.18,1
                pos_hint: {'center_x':0.5 , 'center_y':0.78}
                id:constat
                font_size: "14sp"
                bold: True
            MDTXT:
                id:Ip
                hint_text:'IP Adress'
                focus:True
                on_text_validate:Port.focus=True
            MDTXT:
                id:Port
                hint_text:'Port'
                pos_hint: {'center_x':.5,'center_y':0.46}
                max_text_length: 5
                on_text_validate:username.focus=True
            MDTXT:
                id:user
                hint_text:'username'
                pos_hint: {'center_x':.5,'center_y':0.36}
                on_text_validate:pswd.focus=True
            MDTXT:
                id:pswd
                hint_text:'Password'
                pos_hint: {'center_x':.5,'center_y':0.26}
                password:True
                on_text_validate:root.db_connect()                                
            MDRaisedButton:
                md_bg_color:0,0,0,1
                theme_text_color: "Custom"
                text_color: 0.9,1,1,1
                size_hint: 0.45, 0.07
                pos_hint: {'center_x':0.5 , 'center_y':0.12}
                text:"Connect"
                font_name: 'assets/Bodoni Bold'
                font_size: "18sp"
                on_press:root.db_connect()
                line_color: 1, 1, 1, 1
<MainScreen>:
    canvas.before:
        Color:
            rgba:.96,.87,.30,.8
        Rectangle:
            size:self.size
            pos: self.pos
    BoxLayout:
        orientation:'vertical'
        spacing: '10'
        BoxLayout: #__Database Proccessing  Grid 1
            orientation:'horizontal'
            size_hint: 1,0.3
            RelativeLayout:
                MDLabel:
                    md_bg_color:0,0,0,1
                    size_hint:1.5,1.2
                    text: "Database Management"
                    halign: "center"
                    valign: "middle"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    id:title
                    font_size: "22sp"
                    bold: True
                    pos_hint: {'center_x':0.3 , 'center_y':0.5}
                ImageButton:
                    size_hint :0.6 , 0.6
                    id:imgbtn
                    source:'assets/logout_hover.png'if imgbtn.hovered else "assets/logout_nothover.png"
                    on_press:root.log_out()
                    pos_hint: {'center_x':0.84 , 'center_y':0.45}
        blanks1:
        blanks1:
        BoxLayout:
            orientation:'horizontal'
            size_hint:1,.3
            padding: 15,3
            spacing: '10'
            MDRB:#________"Choose DataBase"
                text:" Select Databse"
                size_hint: .5,1
                on_press:
                    root.upload_db()
            MDRB:#______"Crypt DataBase"
                text:" Crypt Databse "
                size_hint: .5,1
                on_press:
                    root.crypt_db()
        BoxLayout:
            orientation:'horizontal'
            size_hint:1,0.3
            padding: 15,3
            spacing: '10'
            MDRB:    #_____"Send Database"
                text:" Send Databse "
                size_hint: .5,1
                on_press :root.send_db()
            MDRB:     #"Operations"
                text:" Operations "
                size_hint: .5,1
                on_press : 
                    root.operations()
        #*****************************************************
        BoxLayout:
            orientation:'vertical'
            size_hint: 1,1
            padding: 10,10
            spacing: '10'
            RelativeLayout
                ProgressBar:
                    id : my_bar
                    min: 0
                    max: 100
                    value:0
                    pos_hint: {'center_x':0.5 , 'center_y':1}
                    size_hint :0.5,0.20
                MDLabel:
                    pos_hint: {'center_x':0.5 , 'center_y':0.87}
                    multiline: True
                    id:datashow
                    size_hint_y: None
                    theme_text_color: "Error"
                    halign : "center"
                    size_hint : 0.7, 0.3
                MDRB:     #"Show DataTables"
                    pos_hint: {'center_x':0.5 , 'center_y':0.6}
                    size_hint : 0.4, 0.28
                    text:"Show DataTables"
                    on_press: root.showdt()
            blanks1:
            blanks1:
        AnchorLayout:
            theme_text_color: "Primary"
            text_color: 1,0,0,1        
            anchor_x: 'center'
            anchor_y: 'top'
            RelativeLayout
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    pos_hint: {'center_x':.84 , 'center_y':1}
                    MDList:
                        id: container
                        size_hint:0.3,None
                        padding: dp(-15)
                        spacing: dp(13)
                        default_size: None, dp(150)
                        default_size_hint: .1, None
                        size_hint_y: None
                        height: self.minimum_height
                        anchor_x: 'center'
                        anchor_y: 'top'
                MDRB:#________"Crypt Column"
                    text:"Crypt Column"
                    size_hint :0.4,0.22
                    pos_hint: {'center_x':.5 , 'center_y':.3}
                    on_press: root.cryptcolumn()


<ShowDataTable> :
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: 'Show Data'
            type:"top"
            right_action_items: [["home", lambda x: root.onback()]]
            elevation:15        
        BoxLayout:
            id:sdtleft
            size_hint :1,.8
            padding: 20,10

<OperationsScreen>:
    clickedbtn:""

    MDScreen:
        MDLabel:
            text:'Crypted Columns'
            md_bg_color:app.theme_cls.primary_color
            halign:'center'
            size_hint_y:0.08
            size_hint_x:0.4
            pos_hint:{'center_x':.5,'center_y':.8}
            line_color: 1, 1, 1, 1
            font_style:"Subtitle2"
            font_name: 'assets/Bodoni Bold'
            font_size: "18sp"
            bold: True
    BoxLayout:
        orientation:"vertical"
        size_hint : 0.2,0.6
        pos_hint:{'center_x':.5,'center_y':.48}
        canvas:
            Color:
                rgba: 0,0,0,0.005
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            halign:'center'
            do_scroll_x: False
            do_scroll_y: True
            MDList:
                pos_hint:{'center_x':.5,'center_y':.6}
                id: container2
                size_hint :1,0.4
                halign:'center'
        ScrollView:
    BoxLayout:
        orientation:'horizontal'
        size_hint : 1,0.6
        MDScreen:
            BoxLayout:
                orientation:'vertical'
                padding:10
                spacing:10
                size_hint : 0.8,0.6
                pos_hint:{'center_x':0.5,'center_y':0.4}
                MDLabel:
                    text: "Selected column"
                    valign :"middle"
                    size_hint : 0.8,0.2
                MDLabel:
                    text: "Operation"
                    size_hint : 0.8,0.2
                MDLabel:
                    text: "Elapsed Time"
                    valign :"middle"
                    size_hint : 0.8,0.2
                MDLabel:#lresult
                    text: " Result"
                    valign :"middle"
                    size_hint : 0.8,0.2
        MDScreen:
            BoxLayout:
                orientation:'vertical'
                padding:10
                spacing:5
                size_hint : 1,0.6
                pos_hint:{'center_x':.35,'center_y':.4}
                MDTextField:
                    id:showchecked
                    readonly: True
                    text:""
                    halign: 'center'
                    valign: 'middle'
                    font_name: 'assets/Helvetica.ttf'
                MDTextField:
                    id:op
                    readonly: True
                    text:root.clickedbtn
                    halign: 'center'
                    valign: 'middle'  
                    font_name: 'assets/Helvetica.ttf'
                MDTextField:
                    readonly: True
                    text:""
                    id : ltime
                    halign: 'center'
                    valign: 'middle'
                    font_name: 'assets/Helvetica.ttf'                                    
                MDTextField:
                    id: lresult
                    readonly: True
                    text:""
                    multiline:True
                    halign: 'center'
                    valign: 'middle'
                    font_name: 'assets/Helvetica.ttf'                    
    MDNavigationDrawer :
        id : nav_drawer
        orientation: 'vertical'
        padding: "10dp","10dp"
        spacing: '10dp'
        size_hint:0.4,1
        RelativeLayout:
            MDRB: # Sum
                text:"Sum"
                pos_hint: {'center_x':0.5 , 'center_y':0.6}
                size_hint: 0.7,0.2
                font_size: "20sp"
                font_name: 'assets/Helvetica-Bold.ttf'
                on_press:
                    root.sumf()
                    root.clickedbtn="Sum"
            MDRB:#AVG
                text:"AVG"
                pos_hint: {'center_x':0.5 , 'center_y':0.33}
                size_hint: 0.7,0.2
                font_size: "20sp"
                font_name: 'assets/Helvetica-Bold.ttf'
                on_press:
                    root.avgf()
                    root.clickedbtn="AVG"

        ScrollView:
            canvas.before:
                Color:
                    rgba:(0,0,0,1)
                Rectangle:
                    size:self.size
                    pos: self.pos
            RelativeLayout
                MDLabel:
                    pos_hint: {'center_x':0.5 , 'center_y':0.9}
                    size_hint: 0.7,0.2
                    text: "Product"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign : "center"
                    font_name: 'assets/Bodoni Bold'
                    font_size: "22sp"                    
                MDRaisedButton:
                    text:"Russ Mul"
                    pos_hint: {'center_x':0.5 , 'center_y':.6}
                    size_hint: 0.7,0.2
                    md_bg_color:app.theme_cls.primary_color
                    font_size: "20sp"
                    on_press:
                        root.mulru()
                        root.clickedbtn="Ru Multiplication"
                MDRaisedButton:
                    text:"Log Mul"
                    pos_hint: {'center_x':0.5 , 'center_y':.3}
                    size_hint: 0.7,0.2
                    md_bg_color:app.theme_cls.primary_color
                    font_size: "20sp"
                    on_press:
                        root.mulog()
                        root.clickedbtn="Log Multiplication"
    BoxLayout:
        orientation:'vertical'
        padding: 20,20
        spacing: '15','15'
        size_hint:1,0.2
        pos_hint:{'center_y':.95}
        BoxLayout:


        MDToolbar:
            title: 'Operations'
            left_action_items: [['menu', lambda x: nav_drawer.set_state('toggle')]]
            right_action_items: [["home", lambda x: root.onback()]]
            elevation:20
            pos_hint: {"top":1}

<RootWidget>:
    Connect:
        name:"connect"
    MainScreen:
        name:"main_screen"
    ShowDataTable:
        name:"show_data_table"
        id:sdt
    OperationsScreen
        name:"operations_screen"
