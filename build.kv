<MDRB@MDRaisedButton>:
    md_bg_color:  0,0, 0, 1
    theme_text_color: "Custom"
    text_color: 1,1,1,1
    font_size: "16sp"
    size_hint: 0.3,.05
    line_color: 1, 1, 1, 1
<MDTXT@MDTextField>:
    size_hint: 0.4,.1
    pos_hint: {'center_x':0.5 , 'center_y':0.6}
    required: True
    font_size: "14sp"
    text_color: 0,0,0,1
    bold:True
    halign: "center"
<RootWidget>:
    #Connect:
    #    name:"connect"
    MainScreen:
        name:"main_screen"
    ShowDataTable:
        name:"show_data_table"
        id:sdt
    OperationsScreen
        name:"operations_screen"
    XFileChooserIconView:
        name:"file_chooser_icon_view"
        id:fciv
<Connect>:
    canvas.before:
        Color:
            rgba:(.96,.87,.30,.8)
        Rectangle:
            size:self.size
            pos: self.pos
    MDGridLayout:
        cols:1
        MDToolbar:
            title: 'Access Screen'
            type: "top"
            right_action_items: [["close", lambda x: root.onback()]]
            elevation:10
            bold: True
            md_bg_color:0,0,0,1
        MDScreen:
            MDLabel:
                text: "Please Fill the form bellow to procced"
                pos_hint: {'center_x':0.5 , 'center_y':0.9}
                halign:"center"
                bold: True
            MDLabel:
                halign: "center"
                theme_text_color: "Custom"
                text_color:0.80,0.35,0.18,1
                pos_hint: {'center_x':0.5 , 'center_y':0.78}
                id:constat
                font_size: "14sp"
                bold: True
            MDTXT:
                id:Ip
                hint_text:'IP Adress'
                focus:True
                on_text_validate:Port.focus=True
            MDTXT:
                id:Port
                hint_text:'Port'
                pos_hint: {'center_x':.5,'center_y':0.46}
                max_text_length: 5
                on_text_validate:root.db_connect()
            MDRaisedButton:
                size_hint : 0.45, 0.07
                pos_hint: {'center_x':0.5 , 'center_y':0.32}
                text:"Connect"
                on_press:root.db_connect()
                md_bg_color:0,0,0,0.8
                line_color: 1, 1, 1, 1
<MainScreen>:
    canvas.before:
        Color:
            rgba:(.96,.87,.30,.8)
        Rectangle:
            size:self.size
            pos: self.pos
    MDGridLayout:
        cols :1
        spacing: '10dp','15dp',
        MDGridLayout: ##__Database Proccessing # Grid 1
            cols:1
            size_hint: 1,0.3
            RelativeLayout:
                MDLabel:
                    md_bg_color:0,0,0,1
                    size_hint:1,1
                    text: "Database Management"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    id:title
                    font_size: "22sp"
        MDBoxLayout:
            size_hint:1,0.2
        GridLayout:
            size_hint: 1,0.7
            cols: 2
            padding: 20,20
            spacing: '15dp','10dp'
            MDRB:#________"Choose DataBase"
                text:" Select Databse"
                on_press:root.choose_db()
            MDRB:#______"Crypt DataBase"
                text:" Crypt Databse "
                on_press:
                    root.crypt_db()
            MDRB:    #_____"Send Database"
                text:" Send Databse "
                on_press :root.send_db()
            MDRB:     #"Operations"
                text:" Operations "
                on_press : root.to_chfile()
        #*****************************************************#
        GridLayout: #Grid3
            cols:1
            size_hint: 1,1
            padding: 10,10
            spacing: '10dp','10dp'
            RelativeLayout
                ProgressBar:
                    id : my_bar
                    min: 0
                    max: 100
                    value:0
                    pos_hint: {'center_x':0.5 , 'center_y':1}
                    size_hint :0.5,0.20
                MDLabel:
                    pos_hint: {'center_x':0.5 , 'center_y':0.87}
                    multiline: True
                    id:datashow
                    size_hint_y: None
                    theme_text_color: "Error"
                    halign : "center"
                MDRB:     #"Show DataTables"
                    pos_hint: {'center_x':0.5 , 'center_y':0.63}
                    size_hint : 0.4, 0.25
                    text:"Show DataTables"
                    on_press: root.showdt()
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            RelativeLayout
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    pos_hint: {'center_x':.94 , 'center_y':1}
                    MDList:
                        id: container
                        size_hint :0.2,0.3
                        anchor_x: 'center'
                        anchor_y: 'top'
                MDRB:#________"Crypt Column"
                    text:"Crypt Column"
                    size_hint :0.4,0.22
                    pos_hint: {'center_x':.5 , 'center_y':.3}
                    on_press: root.cryptcolumn()
###############################
<ShowDataTable> :
    GridLayout:
        cols:2
        GridLayout:
            cols:1
            id:sdtleft
            size_hint :1,1
            padding: 20,10
            MDToolbar:
                title: 'Show Data'
                right_action_items: [["home", lambda x: root.onback()]]
                elevation:15
                md_bg_color:0,0,0,1
###################################################
<OperationsScreen>:
    GridLayout: #before text id :idinsert
        cols :1
        padding: 20,20
        spacing: '15dp','15dp'
        RelativeLayout:
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                scroll_distance : 20
                pos_hint: {'center_x':1 , 'center_y':.3}
                MDList:
                    id: container2
                    size_hint :0.2,0.3
                    anchor_x: 'center'
                    anchor_y: 'top'
        GridLayout: #before text id :idinsert
            cols :2
            GridLayout:
                cols:1
                size_hint: 0.65, 1
            GridLayout:
                cols: 1
                padding: 20,20
                spacing: '15dp','15dp'
                MDLabel:
                    pos_hint: {'center_x':.61 , 'center_y':.4}
                    text: "Selected column"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    id:showchecked
                    font_size: "16sp"
                    md_bg_color:  0.9,0.32,0.07, 1
                RelativeLayout:
                    MDLabel: #Elapsed Time
                        text: "Elapsed Time"
                        id : ltime
                        md_bg_color:  0,.63,.94, 1
                        pos_hint: {'center_x':.5 , 'center_y':.5}
                        font_size: "16sp"
                        halign: "center"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1

                MDLabel:#lresult
                    text: "Operation Result"
                    id: lresult
                    pos_hint: {'center_x':0.61 , 'center_y':0.15}
                    md_bg_color:  .5, .7, 0, 1
                    halign: "center"
                    size: self.texture_size
                    #font_size: "18sp"
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1
###############################################################################################
    MDNavigationDrawer :
        id : nav_drawer
        orientation: 'vertical'
        padding: "20dp","20dp"
        spacing: '15dp'
        RelativeLayout:
            MDRaisedButton: # Sum
                text:"Sum"
                pos_hint: {'center_x':0.5 , 'center_y':0.6}
                size_hint: 0.7,0.2
                md_bg_color:  0.956,1, 0.824, 1
                text_color:app.theme_cls.primary_color
                font_size: "20sp"
                on_press:root.sumf()
            MDRaisedButton:#AVG
                text:"AVG"
                pos_hint: {'center_x':0.5 , 'center_y':0.33}
                size_hint: 0.7,0.2
                md_bg_color:  0.9,.98, .84, 1
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                font_size: "20sp"
                on_press:root.avgf()

        ScrollView:
            RelativeLayout
                MDLabel:
                    pos_hint: {'center_x':0.5 , 'center_y':0.9}
                    size_hint: 0.7,0.2
                    text: "Product"
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                    halign : "center"
                    height: self.texture_size[1]
                    md_bg_color:  0.93, 0.63,0.60 , 1
                MDRaisedButton:
                    text:"Russ Mul"
                    pos_hint: {'center_x':0.5 , 'center_y':.6}
                    size_hint: 0.7,0.2
                    md_bg_color:  .94,.53, .45, 1
                    font_size: "20sp"
                    on_press:
                        root.mulru()
                        print("Hello==============")
                MDRaisedButton:
                    text:"Log Mul"
                    pos_hint: {'center_x':0.5 , 'center_y':.3}
                    size_hint: 0.7,0.2
                    md_bg_color:  .31, .22, .29, 1
                    theme_text_color: "Custom"
                    font_size: "20sp"
                    on_press:
                        root.mulog()
                        print("Hello==============")
################################################
    GridLayout:

        cols :1
        padding: 20,20
        spacing: '15dp','15dp'
        MDToolbar:
            title: 'Operations'
            left_action_items: [['menu', lambda x: nav_drawer.set_state('toggle')]]
            right_action_items: [["home", lambda x: root.onback()]]
            elevation:20
        ############################
<XFileChooserIconView>:
    rootpath: '/storage/emulated/0/'
	orientation: 'vertical'
	# Creating the File list / icon view
	MDBoxLayout:
		# Creating Icon view other side
		FileChooserIconView:
			canvas.before:
				Color:
					rgb: .5, .4, .5
				Rectangle:
					pos: self.pos
					size: self.size
			on_selection: root.fselected(*args)

	# Adding label
    Label:
        id: label
        size_hint_y: .09
        #pos_hint: {'center_y':0.11}
        halign: "center"
        canvas:
            Color:
                rgb: 0.8, .99, .91
            Rectangle:
                pos: self.pos
                size: self.size
    RelativeLayout:
        MDRaisedButton:
            text: 'Ok'
            pos_hint: {'center_x':0.31,'center_y':0.05}
            on_press:root.ok()
        MDRaisedButton:
            text: 'Cancel'
            pos_hint: {'center_x':0.61,'center_y':0.05}
            on_press:root.cancel()
