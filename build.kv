<Calculator>:
    Screen:
        MDScreen:
            MDTextField:
                id:val1
                hint_text: "First Value"
                size_hint:.3,.08
                mode: "rectangle"
                bold:True
                pos_hint:{'center_x':.49,'center_y':.85}
                line_color_focus: 0, 0, 0, 1
            MDTextField:
                id:val2
                hint_text: "Second Value"
                size_hint:.3,.08
                pos_hint:{'center_x':.49,'center_y':.75}
                mode: "rectangle"
                bold:True
                line_color_focus: 0, 0, 0, 1
        MDScreen:#Floating Action
            #md_bg_color:0.8,0.6,0.6,1
            size_hint: 1,.3
            padding: 20,20 
            pos_hint: {'center_x':0.5 , 'center_y':.5}
            MDScreen:                                         
                MDFloatingActionButton:
                    hint_animation: True
                    icon:'plus'
                    pos_hint:{'center_x':.91,'center_y':.34}
                    elevation_normal: 20
                    on_press:root.addition()
    Screen:#__________Speed Dial
        pos_hint:{'center_x':.52,'center_y':.978}
        MDFloatingActionButtonSpeedDial:
            data: root.data
            #hint_animation: True
            right_pad:True
            rotation_root_button: True
            root_button_anim: True #button rotation
            #label_text_color: 1,0,0,1
            bg_color_stack_button:0,0,1,.5#bg of icons
            bg_color_root_button:1,0,0,1 #SD color
            color_icon_root_button:1,1,.99,1
            elevation_normal: 12
            icon:'multiplication'
            callback: root.callback
    Screen:#____________Labels
        MDLabel:
            pos_hint:{'center_x':.3,'center_y':.6}
            text:"Op : "
            size_hint:.5,.3
            theme_text_color: "Custom"
            text_color: 0,0,0,.9999 
            font_size: "20sp"               
        MDLabel:
            pos_hint:{'center_x':.3,'center_y':.5}
            text:"Time :"
            size_hint:.5,.3
            theme_text_color: "Custom"
            text_color: 0,0,0,.9999             
            font_size: "20sp"
        MDLabel:
            pos_hint:{'center_x':.3,'center_y':.4}
            text:"Result :"
            size_hint:.5,.3
            #theme_text_color: "Custom"
            #text_color: 0,1,0,1 
            font_size: "20sp"
            #bold:True
        MDLabel:
            pos_hint:{'center_x':.3,'center_y':.3}
            text:"FHE Result :"
            size_hint:.5,.3
            #theme_text_color: "Custom"
            #text_color: 0,1,0,1 
            font_size: "20sp"
            #bold:True            
    BoxLayout:#_________Texts
        orientation:'vertical'
        padding:10
        spacing:10
        size_hint : .5,.5
        pos_hint:{'center_x':.55,'center_y':.5}
        MDTextField:
            readonly: True
            text:""
            halign: 'center'
            valign: 'middle'
            font_name: 'assets/Helvetica.ttf'
            font_size: "18sp"
        MDTextField:
            readonly: True
            text:"..."
            halign: 'center'
            valign: 'middle'  
            font_name: 'assets/Helvetica.ttf'
            font_size: "18sp"
        MDTextField:
            readonly: True
            id:result
            text:"..."
            halign: 'center'
            valign: 'middle'
            font_name: 'assets/Helvetica.ttf'
            font_size: "20sp"
        MDTextField:
            readonly: True
            id:fheresult
            text:"..."
            halign: 'center'
            valign: 'middle'
            font_name: 'assets/Helvetica.ttf'
            font_size: "20sp"            
    Screen:
        pos_hint:{'center_x':.52,'center_y':.2}
        size_hint:.8,.2
        
        MDLabel:
            size_hint:1,.5
            id: infoshow
            text: ''
            theme_text_color: "Custom"
            text_color: 0,0,0,.9999 
            md_bg_color:1,250/255,240/250,1 
            halign:'center'           
            font_size:24
    GridLayout:
        cols:1
        MDToolbar:
            title: 'FHE Calculator'
            type: "top"
            right_action_items: [["home", lambda x: root.onback()]]
            elevation:15
        BoxLayout:
