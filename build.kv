<blanks1>:
    size_hint: None, None
    x: dp(16)
    y: dp(1)
    size: dp(1), dp(1)
<MDRB@MDRaisedButton>:
    md_bg_color: .059,.49,.76,1
    theme_text_color: "Custom"
    text_color: 1,1,1,.9999
    #size_hint: 0.3,.05
    #line_color: 1, 1, 1, 1
    font_style:"Subtitle2"
    font_name: 'assets/Bodoni Bold'
    font_size: "20sp"
    size_hint: .45, .5
<MDTXT@MDTextField>:
    size_hint: 0.4,.1
    pos_hint: {'center_x':0.5 , 'center_y':0.6}
    #required: True
    font_size: "14sp"
    text_color: 0,0,0,1
    bold:True
    halign: "center"
    line_color_focus: 1, 0, 1, 1

<Connect>:
    canvas.before:
        Color:
            rgba:(.96,.87,.30,.8)
        Rectangle:
            size:self.size
            pos: self.pos
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: 'Access Screen'
            type: "top"
            right_action_items: [["close", lambda x: root.onback()]]
            elevation:10
            bold: True
            anchor_title: "center"
        MDScreen:
            MDLabel:
                text: "Please Fill the form bellow to procced"
                pos_hint: {'center_x':0.5 , 'center_y':0.9}
                halign:"center"
                bold: True
            MDLabel:
                halign: "center"
                theme_text_color: "Custom"
                text_color:0.80,0.35,0.18,1
                pos_hint: {'center_x':0.5 , 'center_y':0.78}
                id:constat
                font_size: "14sp"
                bold: True
            MDTXT:
                id:Ip
                hint_text:'IP Adress'
                focus:True
                on_text_validate:Port.focus=True
            MDTXT:
                id:Port
                hint_text:'Port'
                pos_hint: {'center_x':.5,'center_y':0.46}
                max_text_length: 5
                on_text_validate:user.focus=True
            MDTXT:
                id:user
                hint_text:'username'
                pos_hint: {'center_x':.5,'center_y':0.36}
                on_text_validate:pswd.focus=True
            MDTXT:
                id:pswd
                hint_text:'Password'
                pos_hint: {'center_x':.5,'center_y':0.26}
                password:True
                on_text_validate:root.connect_db()
            MDRaisedButton:
                md_bg_color:0,0,0,1
                theme_text_color: "Custom"
                text_color: 0.9,1,1,1
                size_hint: 0.45, 0.07
                pos_hint: {'center_x':0.5 , 'center_y':0.12}
                text:"Connect"
                font_name: 'assets/Bodoni Bold'
                font_size: "18sp"
                on_press:root.connect_db()
                line_color: 1, 1, 1, 1
<MainScreen>:
    canvas.before:
        Color:
            rgba: 0,0,0,0
        Rectangle:
            size:self.size
            pos: self.pos
    BoxLayout:
        orientation:'vertical'
        spacing: '10'
        MDToolbar:
            title: 'DataBases Management'
            type:"top"
            elevation:15
            halign:'center'
            anchor_title: "center"
        blanks1:
        blanks1:
        RelativeLayout:
            BoxLayout:
                orientation:'horizontal'
                size_hint:1,.5
                id:lab1
                padding: 10
                spacing: '10'
                pos_hint:{'center_x':.6,'center_y':.8}
                RelativeLayout:
                    MDRB:#________"Choose DataBase"
                        text:" Select Database"
                        pos_hint:{'center_x':.15,'center_y':.3}
                        on_press:
                            root.upload_db()
                    MDRB:#______"Crypt DataBase"
                        text:" Crypt Database "
                        pos_hint:{'center_x':.65,'center_y':.3}
                        on_press:
                            root.crypt_db()
            BoxLayout:
                orientation:'horizontal'
                pos_hint:{'center_x':.6,'center_y':.5}
                id:lab2
                size_hint:1,0.5
                padding: 10
                spacing: '10'
                RelativeLayout:
                    MDRB:    #_____"Send Database"
                        text:" Send Database "
                        pos_hint:{'center_x':.15,'center_y':.3}
                        on_press :root.send_db()
                    MDRB:     #"Operations"
                        text:" Operations "
                        pos_hint:{'center_x':.65,'center_y':.3}
                        increment_width: "20dp"
                        on_press : 
                            root.operations()
        #*****************************************************
        BoxLayout:
            orientation:'vertical'
            size_hint: 1,1
            padding: 10,10
            spacing: '10'
            RelativeLayout
                ProgressBar:
                    id : my_bar
                    min: 0
                    max: 100
                    value:0
                    pos_hint: {'center_x':0.5 , 'center_y':1.22}
                    size_hint :0.8,0.20
                MDLabel:  #datashow
                    pos_hint: {'center_x':0.5 , 'center_y':1.1}
                    multiline: True
                    id:datashow
                    size_hint_y: None
                    theme_text_color: "Custom"
                    halign : "center"
                    size_hint : 0.8, 0.3
                    font_name: 'assets/Helvetica-Bold.ttf'
                    font_size: "16sp"
                    text_color: 0, 0, 1, 1
                MDRB:     #"Show DataTables"
                    pos_hint: {'center_x':0.5 , 'center_y':0.83}
                    size_hint : 0.46, 0.22
                    text:"Show DataTables"
                    font_size: "18sp"
                    on_press: root.showdt()

        AnchorLayout:
            theme_text_color: "Primary"
            text_color: 1,0,0,1        
            anchor_x: 'center'
            anchor_y: 'top'
            RelativeLayout
                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    pos_hint: {'center_x':.84 , 'center_y':1.1}
                    MDList:
                        id: container
                        size_hint:0.3,None
                        padding: dp(-15)
                        spacing: dp(13)
                        default_size: None, dp(140)
                        default_size_hint: .1, None
                        size_hint_y: None
                        height: self.minimum_height
                        anchor_x: 'center'
                        anchor_y: 'top'
                blanks1:
                MDRB:#________"Crypt Column"
                    text:"Crypt Column"
                    size_hint :0.46,0.22
                    pos_hint: {'center_x':.5 , 'center_y':.5}
                    on_press: root.cryptcolumn()
    RelativeLayout:
        ImageButton:
            size_hint :0.12 , 0.06
            id:imgbtn
            source:'assets/logout_hover.png'if imgbtn.hovered else "assets/logout_nothover.png"
            on_press:root.log_out()
            pos_hint: {'center_x':0.5 , 'center_y':0.04}

<ShowDataTable> :
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            title: 'Show Data'
