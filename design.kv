<RootWidget>:
    Connect:
        name:"connect"
    MainScreen:
        name:"main_screen"
    OperationsScreen
        name:"operations_screen"
<Connect>:
    GridLayout
        cols:1
        RelativeLayout            
            MDRaisedButton:
                size_hint : 0.14, 0.15 
                pos_hint: {'center_x':0.5 , 'center_y':0.5}
                text:"Connect"
                on_press:root.db_connect()
        

<MainScreen>:
    GridLayout:
        cols :1
        GridLayout:
            cols:1
            size_hint :0.5,0.4
            MDLabel:
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                id:title
                text: "DataBases Management"
                font_size: "22sp"
        GridLayout:
            cols: 2
            size_hint :0.50,0.5
            padding: 20,20
            spacing: '15dp','15dp'
            MDRaisedButton:
                md_bg_color:  1,0.93150, 0.6, 1
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
                font_size: "18sp"
                size_hint :0.3,0.20 
                text:"Choose DataBase"
                on_press:
                    root.choose_db()
            MDRaisedButton:
                md_bg_color:  0.9,0.8, 0.6, 1
                theme_text_color: "Custom"
                font_size: "18sp"
                size_hint :0.3,0.20 
                text:"Crypt DataBase"
                on_press:
                    root.crypt_db()
                    
            MDRaisedButton:
                md_bg_color:  0.8,0.9, 0.5, 1
                text:"Send Database"
                theme_text_color: "Custom"
                size_hint :0.3,0.20
                font_size: "18sp"
                on_press : 
                    root.send_db()
            MDRaisedButton:
                text:"Operations"
                size_hint :0.3,0.20
                theme_text_color: "Custom"
                font_size: "18sp"
                on_press : root.operations()

        GridLayout:
            cols:1
            padding: 20,20
            spacing: '15dp','15dp'
            MDLabel:
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0, 0, 1, 1
                id:labelshow
                
            MDTextField:
                id:datainsert
                hint_text:'Insert Database name'
            ScrollView:
                MDTextField:
                    multiline: True
                    id:datashow
                    hint_text:'show Data'
                    text:""
                    text_size: self.width, None
                    size_hint_y: None
                    #height: self.texture_size[1]
##########################################
<OperationsScreen>:

    GridLayout:
        cols :1
        GridLayout:
            padding: 80,10
            spacing: '20dp','15dp'
            cols:1
            size_hint: 0.2,0.1
            RelativeLayout:
                MDTextField: # Insert Text
                    id:idinsert
                    size_hint :1,0.9

        GridLayout: # SUM and AVG
            size_hint: 0.2,0.1
            cols:2
            padding: 80,10
            spacing: '20dp','15dp'
            RelativeLayout
                MDRaisedButton: # Sum
                    size_hint :1,0.7
                    md_bg_color:  1,0.93150, 0.7, 1
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    font_size: "18sp"
                    text:"Sum"
                    on_press:
                        root.sumf()
            RelativeLayout
                MDRaisedButton:#AVG
                    size_hint :1,0.7
                    md_bg_color:  0.9,0.8, 0.6, 1
                    theme_text_color: "Custom"
                    font_size: "18sp"
                    text:"AVG"
                    on_press:
                        print(root.ids.idinsert.text)

        GridLayout: # PRoduct Label
            size_hint: 0.2,0.2
            cols:1
            RelativeLayout
                MDLabel:
                    size_hint :0.8,0.40
                    text: "Product"
                    md_bg_color:  0.9,0.8, 0.6, 1
                    font_size: "24sp"
                    halign: "center"
                    pos_hint: {'center_x':0.5 , 'center_y':0.5}

        GridLayout: # MUL RUSSE & LOG MULL
            size_hint: 0.2,0.1
            cols: 2
            padding: 80,10
            spacing: '15dp','0dp'
            RelativeLayout
                MDRaisedButton:             # MUL RUSSE
                    size_hint :1,0.7
                    md_bg_color:  1,0.93150, 0.6, 1
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.primary_color
                    font_size: "18sp"
                    text:"Russ Mul"
                    on_press:
                        root.mulru()
            RelativeLayout
                MDRaisedButton:         # LOG MUL
                    size_hint :1,0.7
                    md_bg_color:  0.9,0.8, 0.6, 1
                    theme_text_color: "Custom"
                    font_size: "18sp"
                    text:"Log Mul"
                    on_press:

        GridLayout:#_________________Show Result Labels
            size_hint: 0.2,0.2
            padding: 20,20
            spacing: '15dp','15dp'
            cols:1
            MDLabel:
                size_hint: 0.3,0.20
                font_size: "18sp"           
                text: "Result"
                halign: "center"
                md_bg_color:  0.9,0.8, 0.6, 1
                font_size: "24sp"
            MDLabel:
                id: opresult
                size_hint: 0.3,0.20
                text: ""
                md_bg_color:  1,0.93150, 0.6, 1
                halign: "center"
                
            



                                                                            
            


